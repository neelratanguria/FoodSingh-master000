<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:layout_marginTop="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F5EEF8"
    android:layout_height="match_parent"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:alpha="0.9"
        android:elevation="3dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAYMENT SUMMARY"
                android:textSize="15dp"
                android:id="@+id/one"
                android:layout_margin="10dp"
                android:textStyle="bold"
                />
            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="1dp"
                android:layout_below="@+id/textView2"
                android:background="#56000000"></LinearLayout>


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                 android:textSize="15dp"
                android:text="Subtotal (In Rupees)"
                android:layout_margin="7dp"
                android:layout_below="@+id/one"
                android:layout_alignParentStart="true"
                android:id="@+id/textView2" />

            <TextView
                android:padding="7dp"
                android:background="@drawable/shapeitem2"
                android:textColor="#ffffff"
                android:id="@+id/total_amount"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignEnd="@+id/one"
                android:layout_marginEnd="23dp"
                android:text="Rs.0" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/one"
                android:layout_below="@+id/textView2"

                android:textSize="15dp"
                android:layout_marginTop="23dp"
                android:text="Shipping" />

            <TextView
                android:background="@drawable/shapeitem3"
                android:textColor="#ffffff"
                android:padding="2dp"
                android:layout_marginBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/textView5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignEnd="@+id/total_amount"
                android:text="FREE"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="26dp"
                android:text="Total (In Rupees)"
                android:textSize="15dp"/>

            <TextView
                android:background="@drawable/shapeitem4"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:id="@+id/final_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/total_amount"
                android:layout_alignTop="@+id/textView7"
                android:text="Rs.0"
                android:textSize="15dp"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0.9"
        android:layout_margin="8dp"
        android:elevation="30dp"
        android:layout_marginTop="30dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative_layout_coupon"
            >

            <FrameLayout

                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"


                android:background="#96184FFF"
                app:srcCompat="@drawable/offer" >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Coupons"
    android:padding="10dp"
    android:textColor="#ffffff"
    android:id="@+id/coupontext"
    android:textSize="15dp"
    android:gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/textView_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:padding="4dp"
                android:textStyle="bold"
               android:gravity="bottom"
                android:layout_below="@+id/imageView2" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0.9"
        android:layout_margin="8dp"
        android:elevation="30dp"
        android:layout_marginTop="30dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative_layout_comment"
            >

            <FrameLayout

                android:id="@+id/frameLayout3"
                android:layout_width="match_parent"
                android:layout_height="40dp"


                android:background="#4CAF50"
                app:srcCompat="@drawable/offer" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:id="@+id/commentsText"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </FrameLayout>

            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your text...(Max Limit 100 characters)"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:maxLength="100"
                android:padding="4dp"
                android:background="#ffffff"
                android:textStyle="bold"
                android:gravity="bottom"
                android:layout_below="@+id/frameLayout3" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="#56000000"></LinearLayout>
<ScrollView
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:alpha="0.9"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:layout_marginTop="10dp"
    android:background="#ffffff"
    android:layout_margin="8dp"
    >
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Enter Your Address"
        android:background="#ffffff"
        android:padding="20dp"
      android:paddingBottom="60dp"

        android:textSize="15dp"
        android:id="@+id/delivery_address"
        android:textStyle="normal"
        />
</ScrollView>



    <Button
        android:id="@+id/final_order"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:background="@drawable/buttonbackground"
        android:layout_marginLeft="80dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:text="Place Order" />

</LinearLayout>
</ScrollView>