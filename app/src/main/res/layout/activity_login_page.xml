<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_another"
    android:gravity="center"
    android:orientation="vertical"

    tools:context="com.fsingh.pranshooverma.foodsingh.login_page">



    <FrameLayout

        android:background="#673AB7"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

<ImageView
    android:alpha="0.8"
    android:scaleType="centerCrop"
    android:src="@drawable/background_another"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />


        <TextView
            android:id="@+id/logintofoodsingh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:textStyle="normal"
            android:fontFamily="serif"
            android:textColor="#ffffff"
            android:text="Login To FoodSingh"/>
        <ImageView
            android:layout_gravity="center_horizontal"
          android:layout_marginTop="40dp"

            android:layout_width="96dp"
            android:layout_marginLeft="2dp"
            android:layout_height="96dp"
            android:background="@drawable/logo7"/>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <EditText


            android:id="@+id/mob"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/edittextbackground"
            android:hint="10 Digit Mobile Number"
            android:textSize="15dp"
            android:gravity="center"
            android:inputType="phone"
            android:padding="15dp"
            android:maxLength="12"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#ffffff"
            android:textColorHint="#fff3f6"
            android:textStyle="normal"/>

        <EditText
            android:background="@drawable/edittextbackground"
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
           android:layout_marginTop="20dp"
            android:hint="Password"

            android:gravity="center"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#ffffff"
            android:textColorHint="#fff3f6"/>

        <!-- Login Button -->

        <Button
            android:gravity="center"
            android:layout_margin="30dp"
            android:padding="4dp"
            android:textSize="10dp"
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dip"
            android:background="@drawable/buttonbackground"
            android:text="LogIn"
            android:textStyle="normal"
            android:textColor="@color/white" />



        <Button

            android:id="@+id/btnToSignUp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbackground2"
            android:layout_marginTop="40dp"
            android:text="Don't You have an account? Sign up."
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView

            android:id="@+id/Forgot_Password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:text="Forgot Your Password?"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="15dp" />



    </LinearLayout>

</FrameLayout>
