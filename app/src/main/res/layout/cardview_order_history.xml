<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        CardView:cardElevation="0dp"
        android:id="@+id/cardView"
        android:elevation="5dp"
        card_view:cardCornerRadius="8dp"
        >
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 190"

                android:padding="4dp"
                android:textStyle="bold"

                android:textColor="#2ECC71"
                android:layout_marginRight="39dp"
                android:background="@drawable/shaperating"
                android:layout_marginTop="20dp"
                android:textSize="15.5dp"

                android:layout_gravity="right"
                />
            <!--   Recycler View Item Row   -->
            <LinearLayout

                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:textSize="10dp"
                    android:text="0"
                    android:id="@+id/item_quantity"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/textbackground"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />
            </LinearLayout>


            <TextView

                android:id="@+id/textview_scroll_items"
                android:layout_width="180dp"
                android:layout_marginLeft="65dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="24dp"
                android:textSize="12dp"
                android:text="Egg Chicken Fried Rice"
                android:maxLines="1"
                />
            <TextView

                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Rs. 190"
                android:id="@+id/date"
                android:padding="4dp"
                android:textStyle="bold"
              android:layout_marginLeft="138dp"
                android:textColor="#96184FFF"

                android:background="@drawable/shapeitem5"
                android:layout_marginTop="60dp"
                android:textSize="15.5dp"

                android:gravity="center"
                />

        </FrameLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs. 190"
            android:padding="4dp"
            android:textStyle="bold"
            android:id="@+id/textview_scroll_address"
            android:textColor="@color/colorPrimary"


            android:layout_marginTop="110dp"
            android:textSize="15.5dp"

            android:gravity="center"
            />

    </android.support.v7.widget.CardView>

</LinearLayout>